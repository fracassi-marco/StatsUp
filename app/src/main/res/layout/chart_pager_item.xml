<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="vertical">

    <ImageView
            android:id="@+id/previous_year_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="12dp"
            android:maxWidth="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/outline_arrow_back_ios_24"
            app:layout_constraintTop_toTopOf="@+id/year_label"
            app:layout_constraintBottom_toBottomOf="@+id/year_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/previous_year_label"/>

    <TextView
            android:id="@+id/previous_year_label"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/year_label"
            app:layout_constraintBottom_toBottomOf="@+id/year_label"
            app:layout_constraintStart_toEndOf="@+id/previous_year_image"
            app:layout_constraintEnd_toStartOf="@+id/year_label"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/year_label"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/next_year_label"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/year_label"
            app:layout_constraintBottom_toBottomOf="@+id/year_label"
            app:layout_constraintEnd_toStartOf="@+id/next_year_image"
            app:layout_constraintStart_toEndOf="@+id/year_label"
            android:textStyle="bold"/>

    <ImageView
            android:id="@+id/next_year_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="12dp"
            android:maxWidth="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/outline_arrow_forward_ios_24"
            app:layout_constraintTop_toTopOf="@+id/year_label"
            app:layout_constraintBottom_toBottomOf="@+id/year_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/next_year_label"/>

    <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/year_bar_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/year_label"
            app:layout_constraintBottom_toTopOf="@id/overview"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/year_bar_chart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <include
                android:id="@+id/total_overview_item"
                layout="@layout/overview_item"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/Grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_overview_item" />

        <include
                android:id="@+id/average_overview_item"
                layout="@layout/overview_item"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/Grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/average_overview_item"/>

        <include
                android:id="@+id/full_average_overview_item"
                layout="@layout/overview_item"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/Grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/full_average_overview_item"/>

        <!--include
                android:id="@+id/stats_mileage_overview_item_year"
                layout="@layout/overview_item"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3" /-->

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>